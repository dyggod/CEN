{
  "name": "keltner-webhook-server",
  "version": "1.0.0",
  "description": "Webhook server for cTrader Keltner Signal cBot - 接收交易信号并截图发送邮件",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "pm2:start": "node node_modules/pm2/bin/pm2 start pm2/ecosystem.config.js",
    "pm2:stop": "node node_modules/pm2/bin/pm2 stop \"EA&CTrader-Webhook\"",
    "pm2:restart": "node node_modules/pm2/bin/pm2 restart \"EA&CTrader-Webhook\"",
    "pm2:delete": "node node_modules/pm2/bin/pm2 delete \"EA&CTrader-Webhook\"",
    "pm2:logs": "node node_modules/pm2/bin/pm2 logs \"EA&CTrader-Webhook\"",
    "pm2:status": "node node_modules/pm2/bin/pm2 status",
    "pm2:startup": "node node_modules/pm2/bin/pm2 startup",
    "pm2:save": "node node_modules/pm2/bin/pm2 save",
    "logs:clear": "node scripts/clear-logs.js"
  },
  "keywords": [
    "ctrader",
    "webhook",
    "screenshot",
    "trading"
  ],
  "author": "Keltner Signal Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "nodemailer": "^6.9.7",
    "screenshot-desktop": "^1.15.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pm2": "^5.3.0"
  }
}

